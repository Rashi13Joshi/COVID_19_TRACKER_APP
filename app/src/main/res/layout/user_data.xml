<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    tools:context=".userInfo_Activity">


        <EditText
            android:id="@+id/usernum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/userdistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernum"
            android:hint="Enter Pincode"
            android:inputType="number"
            android:textSize="20dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userdistrict"
            android:layout_marginTop="20dp"
            android:text="Save" />

        <TextView
            android:layout_below="@id/save"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textFontWeight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Click on save and get vaccine availability alert SMS for your area!"/>

</RelativeLayout>